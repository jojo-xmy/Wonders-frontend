{
  "imports": {
    "vite": ["defineConfig", "loadEnv"]
  }
}
import { defineConfig, loadEnv } from 'vite'
import react from '@vitejs/plugin-react'

export default defineConfig(({ mode }) => {
  const env = loadEnv(mode, process.cwd(), 'VITE_') 
  
  return {
    plugins: [react()],
    define: {
      'process.env': env
    },
    server: {
      port: 3000,
      open: true
    },
    build: {
      outDir: 'dist',
      sourcemap: false
    }
  }
})